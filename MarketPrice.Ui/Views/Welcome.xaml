<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MarketPrice.Ui.ViewModels"
             x:Class="MarketPrice.Ui.Views.Welcome"
             Shell.NavBarIsVisible ="False"
             BackgroundColor="{StaticResource Background}"
             Title="Welcome">

    <ContentPage.BindingContext>
        <viewModel:WelcomeViewModel/>
    </ContentPage.BindingContext>


    <Grid RowDefinitions="*, Auto" Padding="30">
        <VerticalStackLayout Grid.Row="0" Spacing="15" VerticalOptions="Center">
            <VerticalStackLayout Spacing="0" Margin="0,0,0,20">
                <Label
                    Text="Welcome"
                    FontSize="55"
                    FontFamily="RobotoSerifBold"
                    HorizontalOptions="Center"/>
                <Label
                    Text="to MarketPrice"
                    FontFamily="RobotoSerifBold"
                    FontSize="24"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Image Source="welcome.png"
                       HeightRequest="280"
                       HorizontalOptions="Center"
                       Margin="0,10"/>

            <Label Text="Create your account"
                       FontSize="25"
                       FontFamily="RobotoSerifBold"
                       HorizontalOptions="Center"
                       Margin="0,10, 0, 5"/>

            <Label Text="MarketPrice helps you get instant access to the latest prices and make smarter decisions ..."
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       FontFamily="RobotoSerifRegular"
                       LineHeight="1.2"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1"
                                 Spacing="12"
                                 Margin="0,30,0,10">
            <Button Text="Register"
                        Command="{Binding NavigateToRegisterCommand}"
                        FontFamily="RobotoSerifBold"
                        Background="{StaticResource PrimaryBase}"
                        CornerRadius="35"
                        HeightRequest="50"/>

            <Button Text="Login"
                        Command="{Binding NavigateToLoginCommand}"
                        FontFamily="RobotoSerifBold"
                        Background="White"
                        BorderColor="{StaticResource PrimaryBase}"
                        BorderWidth="2"
                        TextColor="{StaticResource PrimaryBase}"
                        CornerRadius="35"
                        HeightRequest="50"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>